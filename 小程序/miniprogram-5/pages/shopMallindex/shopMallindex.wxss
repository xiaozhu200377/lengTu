page{
  background-color: black;
  color: #fff;
}
.container {
    padding: 10px 10px;
    font-family: 'PingFang SC';
}

.cont-top {
    overflow: hidden;
    color: #fff;
}

.con-top-left {
    font-size: 24px;
    line-height: 54px;
    float: left;
    margin-left: 10px;
    height:50px;
}

.con-top-right {
    float: right;
    margin-right: 5px;
    line-height: 50px;
    height: 50px;
    display: flex;
    margin-right: 95px;
}

.con-top-right .shopCar,
.shopBook {
    line-height: 100%;
    padding-top: 15%;
}

.con-top-right .shopCar {
    padding-right: 15px;
}

.shopCar .car_text,
.book_text {
  position: absolute;
    font-size: 10px;
    top:45px;
}

.search-div {
    width: 100%;
    margin-top: 10px;
}

.search-div .search-box {
    display: flex;
    background-color: #48454C;
    border-radius: 12.5px;
    height: 35px;
    margin: 0 auto;
    margin-bottom: 10px;
    width: 100%;
}

.search-box .search-icon {
    margin-left: 10px;
    display: flex;
    align-items: center;
    color: #6D6A71;
}

.search-box .search-input {
    height: 14px;
    margin-top: 6px;
    color: #6D6A71;
}
.auto-share {
    width: 100%;
    border-radius: 12.5px;

    opacity: 0.5;
    height: 140px;
    overflow: hidden;
}


.auto-share image{
  width: 100%;
}
.compo {
    width: 100%;
    height: 75px;
    margin-top: 12.5px;
    border-radius: 12.5px;
    display: flex;
    overflow: hidden;
}
.compo .compo-left {
    float: left;
    background: #333641;
    width: 50%;
    height: 75px;
    line-height: 70px;
    border-radius: 15px;
    margin-right: 5px;
    justify-content: center;
    display: flex;
}

.compo-left .back-icon {

    width: 25px;
    height: 25px;
    background: rgba(96, 101, 120, 0.8);
    border-radius: 100%;
    padding: 7.5px;
    transform: translateY(41%);
}

.compo-left .back-icon .vr-world {
    width: 23px;
    height: 20px;
    position: absolute;
    left: 6px;
    top: 10px;
    padding-left:7% ;
}
.compo-left .vr-text{
padding-top: 3px;
  margin-left: 25rpx;
}
.compo-left .detail-icon{
  width: 15%;
  height: 15%;
  margin-left: 20px;
  padding-top: 4px;
}
.compo-left .detail-icon .detail-img{
  height:136%;
  width: 81%;
}

.compo .compo-right {
  float: right;
  background: #333641;
  width: 50%;
  height: 75px;
  line-height: 70px;
  border-radius: 15px;
  margin-right: 5px;
  justify-content: center;
  display: flex;
}

.compo-right .back-icon {

  width: 25px;
  height: 25px;
  background: rgba(96, 101, 120, 0.8);
  border-radius: 100%;
  padding: 7.5px;
  transform: translateY(41%);

}

.compo-right .back-icon .icon-3d {
  width: 23px;
  height: 23px;
  padding-left:7% ;
  position: absolute;
  top:9px;
  left: 5px;
}
.compo-right .vr-text{
  padding-top: 3px;
margin-left: 12.5px;
}
.compo-right .detail-icon{
width: 15%;
height: 15%;
margin-left: 20px;
padding-top: 4px;
}
.compo-right .detail-icon .detail-img{
height:128%;
width: 81%;
}
.hr-text {
    height: 50px;
}

.hr-text .hr {
    height: 1px;
    width: 90%;
    background-color: aliceblue;
    margin: 15px;
    display: flex;
    justify-content: center;
    opacity: 0.4;
}

.hr-text .r-text {
    height: 25px;
    line-height: 25px;
    display: flex;
    justify-content: center;
    opacity: 0.8;
}

.goods-list {

    height: 275px;
    width: 100%;
    border-radius: 12.5px;
    display: flex;
    flex-flow: row wrap;
    margin-left: 4px;
}

.goods-list .goods-item {
    width: 49%;
    border-radius: 12.5px;
  padding-left: 1%;
}

.goods-item .goods-item-img image{
  position: static;
  left: 0px;
  top: 0px;
  width: 185px;
  border-radius: 4px;
  opacity: 1;
}

.goods-item .goods-item-title {
  color: #fff;
  position: static;
  font-size: 13.5px;
  opacity: 1;

}

.goods-item .goods-item-price-shop {
  display: flex;
}

.goods-item-price-shop .item-price {
  font-size: 15px;
}
.goods-item-price-shop .item-shop{
  margin-left: 95px;
}
.goods-item-price-shop .item-shop image{

position: static;
left: 0px;
top: 0px;
width: 18px;
opacity: 1;
}